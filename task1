    <script type="text/javascript">
    function digitSum(k) {
    
    if (k < 10) {
        return k;
    }
    
    return k % 10 + digitSum(Math.floor(k / 10));
}


console.log(digitSum(123)); 
console.log(digitSum(9876)); 



        </script>
